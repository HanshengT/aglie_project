<script type="text/javascript">
    var countdown=5;
    function cd() {
        if (countdown == 0) {
            clearTimeout(countdown_func);
            window.location.href="/";
            countdown = 10;
        } else {
            document.getElementById("second").innerHTML = `Automatically redirecting you back to the login page in ${countdown} seconds`;
            countdown --;
            var countdown_func = setTimeout('cd()', 1000)
        }
    }
    cd();

</script>
